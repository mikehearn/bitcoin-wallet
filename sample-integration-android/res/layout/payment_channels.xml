<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:orientation="vertical" >
    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="172.16.74.124"
            android:id="@+id/channel_host_text"
            android:inputType="textUri"/>
    <Button
            android:id="@+id/open_channel_button"
            style="@android:style/TextAppearance.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Open Payment Channel" />
    <Button
            android:id="@+id/pay_channel_button"
            style="@android:style/TextAppearance.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Pay 30,000 satoshis" />
    <Button
            android:id="@+id/settle_channel_button"
            style="@android:style/TextAppearance.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Settle channel" />
</LinearLayout>
